<div class="page-header">
  <h1>
    Fridge contents
    <a href="/fridge_contents/new" class="btn btn-lg btn-success">New Fridge content</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Items</th>
        <th>Quantity</th>
        <th>Expiration date</th>
        <th>Date purchased</th>
        <th>Actions</th>
      </tr>

      <% @fridge_contents.each do |fridge_content| %>
      <tr>
        <td><%= Item.find_by( :id => fridge_content.items_id).item_name %></td>
        <td><%= fridge_content.quantity %></td>
        <td><%= fridge_content.expiration_date.strftime('%m/%d/%y') %></td>
        <td><%= fridge_content.date_purchased.strftime('%m/%d/%y') %></td>
        <td>
          <a href="/fridge_contents/<%= fridge_content.id %>" class="btn btn-default">Show</a>
          <a href="/fridge_contents/<%= fridge_content.id %>/edit" class="btn btn-default">Edit</a>
          <a href="/delete_fridge_content/<%= fridge_content.id %>" class="btn btn-default" rel="nofollow">Delete</a>
          <a href="/shopping_lists/addtoshop" class="btn btn-default" rel="nofollow">Add to Shopping List</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
