<div class="page-header">
  <h3>Shopping List #<%= @shopping_list.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Items</dt>
      <dd><%= Item.find_by( :id => @shopping_list.items_id).item_name %></dd>

      <dt>Quantity</dt>
      <dd><%= @shopping_list.quantity %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/shopping_lists" class="btn btn-default">
        Back
      </a>
      <a href="/shopping_lists/<%= @shopping_list.id %>/edit" class="btn btn-default">
        Edit
      </a>
      <a href="/delete_shopping_list/<%= @shopping_list.id %>" class="btn btn-default" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
