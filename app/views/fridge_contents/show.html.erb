<div class="page-header">
  <h3>Fridge Content #<%= @fridge_content.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Items</dt>
      <dd><%= Item.find_by( :id => @fridge_content.items_id).item_name %></dd>

      <dt>Quantity</dt>
      <dd><%= @fridge_content.quantity %></dd>

      <dt>Expiration date</dt>
      <dd><%= @fridge_content.expiration_date %></dd>

      <dt>Date purchased</dt>
      <dd><%= @fridge_content.date_purchased %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/fridge_contents" class="btn btn-default">
        Back
      </a>
      <a href="/fridge_contents/<%= @fridge_content.id %>/edit" class="btn btn-default">
        Edit
      </a>
      <a href="/delete_fridge_content/<%= @fridge_content.id %>" class="btn btn-default" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
